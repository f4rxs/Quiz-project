<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instructor Sign Up</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Include any additional stylesheets or scripts you may need -->
    <style>
        body {
            background: linear-gradient(to right, #3498db, #6c5ce7);
            color: #fff;
            font-family: 'Arial', sans-serif;
        }

        .container {
            background-color: rgba(52, 152, 219, 0.9);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 50px;
        }

        h1 {
            color: #000;
        }

        form {
            max-width: 400px;
            margin: 0 auto;
        }

        label {
            color: #000;
        }

        .btn-primary {
            background-color: #6c5ce7;
            border-color: #6c5ce7;
            border-radius: 5px;
        }

        .btn-primary:hover {
            background-color: #4a3cc4;
            border-color: #4a3cc4;
        }

        .login-link {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: #000;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Instructor Sign Up</h1>

        <!-- Your instructor sign-up form with Bootstrap classes -->
        <form id="signupForm" action="/quizsystem/instruct" method="post" class="mt-4">
            <!-- Add your sign-up form fields here -->
            <div class="form-group">
                <label for="Username">Username:</label>
                <input type="text" id="Username" name="Username" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="Email">Email:</label>
                <input type="email" id="Email" name="Email" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="Password">Password:</label>
                <input type="password" id="Password" name="Password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
        </form>

        <!-- Login link -->
        <a href="/quizsystem/login/instructor" class="login-link">Already have an account? Log in here</a>
    </div>

    <!-- Include Bootstrap JS and any additional scripts or libraries you may need -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Add a submit event listener to the form
            document.getElementById('signupForm').addEventListener('submit', function (event) {
                // Prevent the default form submission
                event.preventDefault();

                // Call the loginInstructor service using fetch or your preferred method
                // Example using fetch:
                fetch('/quizsystem/instruct', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        Email: document.getElementById('Email').value,
                        Password: document.getElementById('Password').value,
                    }),
                })
                .then(response => response.json())
                .then(data => {
                    // Handle the response from the service
                    console.log(data); // You can update this part based on your needs
                    // Redirect to the login page if successful
                    if (data.success) {
                        window.location.href = '/quizsystem/login/instructor';
                    }
                })
                .catch(error => {
                    console.error('Error during loginInstructor service:', error);
                    // Handle the error, show a message, or redirect the user to an error page
                });
            });
        });
    </script>
</body>

</html>
