<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz System - All Students</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/cosmo/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(to right, #3498db, #6c5ce7);
            color: #fff;
            font-family: 'Arial', sans-serif;
            padding-bottom: 50px;
        }

        .container {
            margin-top: 50px;
            text-align: center;
            background-color: rgba(120, 182, 166, 0.932);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 30px;
            overflow: hidden;
        }

        h1 {
            color: #000000;
        }

        .table-container {
            margin-top: 20px;
            max-height: 400px;
            overflow-y: auto;
        }

        .table {
            width: 100%;
        }

        .update-delete-buttons {
            margin-top: 20px;
            position: fixed;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1000;
        }

        .btn-primary,
        .btn-danger {
            margin-right: 5px;
            border-radius: 5px;
        }

        .modal-content {
            border-radius: 10px;
        }

        .modal-header {
            background-color: #007bff;
            color: rgb(19, 19, 19);
            border-bottom: 2px solid #0056b3;
        }

        .modal-body {
            padding: 20px;
            color: #333;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1 class="text-center mb-4">All Students Information</h1>

        <div class="table-container">
            <table class="table table-bordered border-primary">
                <thead>
                    <tr>
                        <th scope="col">Student ID</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% students.forEach(student=> { %>
                        <tr>
                            <td>
                                <%= student.StudentID %>
                            </td>
                            <td>
                                <%= student.Username %>
                            </td>
                            <td>
                                <%= student.Email %>
                            </td>
                            <td>
                                <!-- Update form -->
                                <!-- <form class="d-inline" action="/quizsystem/student/<%= student.StudentID %>" method="POST">
                                    <input type="hidden" name="_method" value="PUT">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </form> -->

                                <!-- Delete form -->
                                <form class="d-inline" action="/quizsystem/student-delete/<%= student.StudentID %>"
                                    method="GET">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <!-- Update Modal -->
        <div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="updateModalLabel">Update Student</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="updateForm">
                            <input type="hidden" name="_method" value="PUT">
                            <div class="form-group">
                                <label for="id">Enter Student ID:</label>
                                <input type="text" class="form-control" id="id" name="id" required>
                            </div>
                            <div class="form-group">
                                <label for="username">User name:</label>
                                <input type="text" class="form-control" id="username" name="username" required>
                            </div>
                            <div class="form-group">
                                <label for="email">User Email:</label>
                                <input type="text" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="form-group">
                                <label for="password">User Password:</label>
                                <input type="text" class="form-control" id="password" name="password" required>
                            </div>
                            <button type="submit" class="btn btn-primary" onclick="updateUser()">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#updateModal">Update</button>

        <script>
   
            // Check for the presence of the authentication token
            const token = localStorage.getItem('authToken'); // Adjust storage mechanism as needed
        
            if (token) {
              // Token is present, user is logged in
              // You may also want to verify the token on the server for added security
              console.log('User is logged in as an instructor.');
            } else {
              // Token is not present, user is not logged in
              console.log('User is not logged in.');
              
              // Hide the content
              const secretPageContent = document.querySelectorAll('h1, p');
              secretPageContent.forEach(element => {
                element.style.display = 'none';
              });
            }
          </script>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-pzjw8+ua/C65LXxHwXyoRm7kGGO7B9yKt7W2oET5omI21a1aRJ8lo2p5RAdC7/A"
            crossorigin="anonymous"></script>
            <script>
                function updateUser() {
                    event.preventDefault();
                    const studentID = document.getElementById('id').value;
                    const username = document.getElementById('username').value;
                    const email = document.getElementById('email').value;
                    const password = document.getElementById('password').value;
                    console.log(studentID);
                    fetch(`/quizsystem/student/${studentID}`, {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ username, email, password }),
                    })
                        .then((response) => {
                            if (response.ok) {
                                // Do not wait for the response, refresh the page immediately
                                console.log("yay");
                                window.location.reload();
                            } else {
                                console.error('Failed to update user');
                            }
                        })
                        .catch((error) => {
                            console.error(error);
                        });
                }
            </script>

</script>
</body>

</html>