<!-- views/getInstructorById.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instructor Details</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container mt-5">
        <h2>Instructor Details</h2>

        <!-- Search form -->
        <form action="/instruct/:id" method="GET" class="form-inline mt-3">
            <div class="form-group mx-sm-3 mb-2">
                <label for="instructorIdInput" class="sr-only">Instructor ID</label>
                <input type="text" class="form-control" id="instructorIdInput" name="id" placeholder="Enter Instructor ID">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Search</button>
        </form>

        <% if (instructor.length > 0) { %>
            <!-- Display instructor details using Bootstrap card -->
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Instructor ID: <%= instructor[0].InstructorID %></h5>
                    <p class="card-text">Name: <%= instructor[0].Username %></p>
                    <p class="card-text">Email: <%= instructor[0].Email %></p>
                    <!-- Add more details as needed -->
                </div>
            </div>
        <% } else if (id) { %>
            <!-- Display message if no instructor found with the searched ID -->
            <p class="mt-3">No instructor found with ID <%= id %>.</p>
        <% } %>
    </div>

    <!-- Include Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
</body>

</html>
